@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <p>
        <div class="col-md-12 linha-sup-cinza">
            <input type="submit" class="btn btn-primary" value="Deletar" onclick="return confirm('Você confirma esta ação?');" />
            @Html.ActionLink("Voltar", "../Home/Clientes", null, new { id = "addItem", @class = "btn btn-success" })
        </div>       
    </p>
}
