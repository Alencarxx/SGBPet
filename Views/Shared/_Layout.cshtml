@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <title>SGB - Sistema de Gestão  Pet DF </title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="nav-divider">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="masthead">
                        <strong><a href="~/Home/Index.cshtml" alt="Sistema de Gestão - Pet DF / 2015" class="navbar-brand"><img src="~/Content/imagens/bompracachorro.png" width="250" height="85" /></a></strong>
                        @*<div class="navbar-collapse collapse">*@
                        <ul class="nav nav-justified">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Clientes", "Clientes", "Home")</li>
                            <li>@Html.ActionLink("Contratos", "Contratos", "Home")</li>
                            <li>@Html.ActionLink("Agendamentos", "Agendamentos", "Home")</li>
                            <li>@Html.ActionLink("Vacinas", "Vacinas", "Home")</li>
                            <li>@Html.ActionLink("Produtos", "Produtos", "Home")</li>
                            <li>@Html.ActionLink("Vendas", "Vendas", "Home")</li>
                            @*@if (ReferenceEquals(TempData["Autorizacao"], User.Identity.GetUserName()))
                                {*@
                                    <li>@Html.ActionLink("Financeiro", "Financeiro", "Home")</li>
                                @*}*@
                        </ul>
                        @Html.Partial("_LoginPartial")
                        @*</div>*@
                    </div>
                </div>
            </div>
        </div>
        <div class="container body-content">
            <br /><br /><br /><br /><br />
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - SGB - Sistema de Gestão Pets DF / Desenvolvido por: <a href="http://www.aportoweb.com">Alencar Porto</a></p>
            </footer>
        </div>
    }
    else
    {
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - SGB - Sistema de Gestão Pets DF / Desenvolvido por: <a href="http://www.aportoweb.com">Alencar Porto</a> </p>
            </footer>
        </div>
    }

    @*<script src="//code.jquery.com/jquery-1.10.2.js"></script>
        <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>*@
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery-ui-1.11.4/jquery-ui.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script type="text/javascript" src="~/Scripts/sgb.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/maskMoney.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>