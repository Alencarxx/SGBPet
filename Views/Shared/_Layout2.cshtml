<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SGB - Sistema de Gestão  BomPraCachorro DF </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">                        
                    </button>                    
                    <div class="navbar-collapse collapse">
                        <ul class="nav nav-justified">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Clientes", "Clientes", "Home")</li>
                            <li>@Html.ActionLink("Contratos", "Contratos", "Home")</li>
                            <li>@Html.ActionLink("Agendamentos", "Agendamentos", "Home")</li>
                            <li>@Html.ActionLink("Vacinas", "Vacinas", "Home")</li>
                            <li>@Html.ActionLink("Produtos", "Produtos", "Home")</li>
                        </ul>
                    </div>
                </div>               
            </div>
        </div>   
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - SGB - Sistema de Gestão Pet DF 
            </footer>
        </div>
    }
    else
    {
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - SGB - Sistema de Gestão Pet DF 
            </footer>
        </div>
    }
    <script type="text/javascript" src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.maskMoney.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript" src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.maskedinput.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>