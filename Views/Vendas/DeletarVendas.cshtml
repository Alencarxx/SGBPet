@model SGB_Beta1.Models.Vendas

@{
    ViewBag.Title = "Deletar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Deletar</h2>

<h3>Tem certeza que deseja excluir?</h3>
<fieldset>
    <legend>Venda</legend>

    <table border="0">
        <tr>
            <td>
                <div class="display-label">
                    @Html.LabelFor(model => model.codigoVenda, new { @class = "control-label col-md-2" })
                </div>
            </td>
            <td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.codigoVenda)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="display-label">
                    @Html.LabelFor(model => model.codigoProduto, new { @class = "control-label col-md-2" })
                </div>
            </td>
            <td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.codigoProduto)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="display-label">
                    @Html.LabelFor(model => model.descricao, new { @class = "control-label col-md-2" })
                </div>
            </td>
            <td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.descricao)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="display-label">
                    @Html.LabelFor(model => model.quantia, new { @class = "control-label col-md-2" })
                </div>
            </td>
            <td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.quantia)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="display-label">
                    @Html.LabelFor(model => model.DataVenda, new { @class = "control-label col-md-2" })
                </div>
            </td>
            <td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.DataVenda)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="display-label">
                    @Html.LabelFor(model => model.valorTotal, new { @class = "control-label col-md-2" })
                </div>
            </td>
            <td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.valorTotal)
                </div>
            </td>
        </tr>
    </table>



</fieldset>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <p>
        <div class="col-md-12 linha-sup-cinza">
            <input type="submit" class="btn btn-primary" value="Deletar" onclick="return confirm('Você confirma esta ação?');" />
            @Html.ActionLink("Voltar", "../Home/Vendas", null, new { id = "addItem", @class = "btn btn-success" })
        </div>
    </p>
}
